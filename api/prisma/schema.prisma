datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    role Role
    customerId String
}

model Ticket {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      String   
  customerId  String
  createdBy   String   
  createdAt   DateTime @default(now())
}


enum Role {
    USER
    ADMIN
}